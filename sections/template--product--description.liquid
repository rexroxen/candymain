<div
  class="wrapper-spacing--v wrapper-spacing--h product-description-container"
  style="--padding-section-top: {{ section.settings.section_padding_top }}px; --padding-section-bottom: {{ section.settings.section_padding_bottom }}px;"
>
  <div class="width--content">
    <div class="product-description product-description_full-width rte text-link-animated{% if section.settings.enable_readmore %} readmore closed{% endif %}" itemprop="description">
      {{ product.description }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.template--product--description.name",
  "class": "section--product-description",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_readmore",
      "label": "t:sections.template--product--description.settings.enable_readmore.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:all.Layout"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "t:all.Spacing_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "t:all.px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "t:all.Spacing_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "t:all.px",
      "default": 60
    }
  ]
}
{% endschema %}