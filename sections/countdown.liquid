{{ 'section-countdown.min.css' | asset_url | stylesheet_tag: preload: true }}
<noscript>{{ 'section-countdown.min.css' | asset_url | stylesheet_tag }}</noscript>

{%- liquid
  assign layout_class = 'countdown--overlap'
  case section.settings.text_alignment
    when 'left'
      assign flex_align_class = 'flex-start'
    when 'center'
      assign flex_align_class = 'center'
    when 'right'
      assign flex_align_class = 'flex-end'
  endcase

  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<style>
  .countdown--{{ section.id }} .countdown__overlay { 
    display: none;
  }

  {% if section.settings.image == blank %}
    .countdown--{{ section.id }} {
      background-color: {{ section.settings.background_color }};
      color: {{ section.settings.text_color }};
    }

    .countdown--{{ section.id }} .countdown-timer__separator-dot {
      background-color: {{ section.settings.text_color }} !important;
    }

    .countdown--{{ section.id }} .countdown__button {
      color: {{ section.settings.button_text_color }} !important;
      background-color: {{ section.settings.button_background_color }};
    }

    .countdown--{{ section.id }} .countdown__button:focus {
      outline: 2px solid {{ section.settings.button_background_color }} !important;
    }
  {% else %}
    .countdown--{{ section.id }} {
      background-color: var(--color-primary-background);
      color: var(--text-color);
    }

    .countdown--{{ section.id }} .countdown-timer__separator-dot {
      background-color: var(--text-color) !important;
    }

    .countdown--{{ section.id }} .countdown__button {
      color: var(--primary-btn-text-color) !important;
      background-color: var(--primary-btn-bg-color);
    }
  {% endif %}

  @media screen and (min-width: 768px) {
    .countdown--{{ section.id }},
    .countdown--{{ section.id }} h2 {
      text-align: {{ section.settings.text_alignment }};
    }

    .countdown--{{ section.id }} .countdown-timer__container {
      justify-content: {{ flex_align_class }};
    }

    .countdown--{{ section.id }} .countdown-timer__separator-dot {
      background-color: {{ section.settings.text_color }} !important;
    }

    .countdown--{{ section.id }} {
      color: {{ section.settings.text_color }};
    }

    .countdown--{{ section.id }} .countdown__button {
      color: {{ section.settings.button_text_color }} !important;
      background-color: {{ section.settings.button_background_color }};
    }

    .countdown--{{ section.id }} .countdown__button:focus {
      outline: 2px solid {{ section.settings.button_background_color }} !important;
    }

    {% if section.settings.image == blank %}
      .countdown--{{ section.id }} {
        background-color: {{ section.settings.background_color }};
      }
    {% else %}
      .countdown--{{ section.id }} .countdown__overlay {
        background-color: {{ section.settings.overlay_color }};
        opacity: {{ overlay_opacity }};
        width: 100%;
        height: 100%;
        display: block;
      }

      .countdown--{{ section.id }} {
        background-color: unset;
      }
    {% endif %}
  }
</style>

<section 
  class="wrapper-spacing--v {{ layout_class }} countdown--{{ section.id }}"
  data-wetheme-section-type="countdown"
  data-wetheme-section-id="{{ section.id }}"
  style="--margin-section-top: {{ section.settings.section_margin_top }}px; --margin-section-bottom: {{ section.settings.section_margin_bottom }}px;"
>

  <div class="countdown__image{% if settings.ken_burns_enabled %} kb-enabled{% endif %}">
    {% if section.settings.image != blank %}
      <div id="rellax--{{ section.id }}" class="img" data-rellax-percentage="0.5" data-rellax-speed="-6">
        {% render 'responsive-image' with section.settings.image, alt: section.settings.image.alt, allow_stretch: true %}
      </div>
    {% endif %}
  </div>

  <div class="countdown__overlay"></div>

  <div class="countdown__content-box-wrapper wrapper-spacing--h">
    {% if section.blocks.size > 0 %}
      <div class="countdown__content-box width--content">
        <div class="countdown__content-box-inner show-on-scroll">
          {% for block in section.blocks %}
            {% case block.type %}

              {% when 'countdown_timer' %}

                {% render 'countdown-timer' with
                  timer_id: section.id,
                  end_date_setting: block.settings.end_date,
                  end_time_setting: block.settings.end_time,
                  hide_when_complete: block.settings.hide_when_complete,
                  time_labels: block.settings.time_labels,
                  is_block: true,
                  background_color_override: section.settings.text_color
                %}

              {% when 'subheading' %}

                {% if block.settings.subheading != blank %}
                  <h3 class="countdown__subheading" {{ block.shopify_attributes }}>{{ block.settings.subheading }}</h3>
                {% endif %}

              {% when 'heading' %}

                {% if block.settings.heading != blank %}
                  <h2 class="homepage-sections--title countdown__heading" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
                {% endif %}

              {% when 'text' %}

                {% if block.settings.text != blank %}
                  <p class="countdown__text" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
                {% endif %}

              {% when 'button' %}

                {% if block.settings.link != blank and block.settings.label != blank %}
                  <a href="{{ block.settings.link }}" class="btn homepage-featured-box-btn countdown__button" {{ block.shopify_attributes }}>
                    {{ block.settings.label | escape }}
                  </a>
                {% endif %}

              {% when 'timer_complete_message' %}

                {% if block.settings.text != blank %}
                  <p data-timer-complete-content data-timer-id={{ section.id }} class="countdown__timer-complete-message hide" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
                {% endif %}

            {% endcase %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "t:sections.countdown.name",
  "class": "section--countdown",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:all.Image_optional",
      "info": "t:sections.countdown.settings.image.info"
